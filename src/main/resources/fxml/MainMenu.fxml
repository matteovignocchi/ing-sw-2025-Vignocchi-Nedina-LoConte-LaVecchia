<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1060.0" stylesheets="@css/Button.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.galaxytrucker.View.GUI.Controllers.MainMenuController">

    <children>

        <!-- Background Image -->
        <ImageView fitHeight="800.0" fitWidth="1060.0" preserveRatio="false"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../images/background_image_menu.png" />
            </image>
        </ImageView>

        <!-- Optional Logo -->
        <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true"
                   AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="620.0">
            <image>
                <Image url="@../images/SSC_Neapel.svg.png" />
            </image>
        </ImageView>

        <!-- Grid with Buttons -->
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="266.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="266.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="266.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <Button fx:id="joinButton" mnemonicParsing="false"
                        prefHeight="65.0" prefWidth="200.0"
                        styleClass="button" text="Join Game"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER">
                    <GridPane.margin>
                        <Insets top="100.0" />
                    </GridPane.margin>
                </Button>

                <Button fx:id="createButton" mnemonicParsing="false"
                        prefHeight="65.0" prefWidth="200.0"
                        styleClass="button" text="Create Game"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER">
                    <GridPane.margin>
                        <Insets top="100.0" />
                    </GridPane.margin>
                </Button>

                <Button fx:id="logoutButton" mnemonicParsing="false"
                        prefHeight="65.0" prefWidth="200.0"
                        styleClass="button" text="Logout"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"
                        GridPane.halignment="CENTER">
                    <GridPane.margin>
                        <Insets top="100.0" />
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
